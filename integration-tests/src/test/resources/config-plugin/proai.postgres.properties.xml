<processor>
    <modify>
        <name>proai.driverPollSeconds</name>
        <value>60</value>
    </modify>
    <modify>
        <name>proai.db.url</name>
        <value>jdbc:postgresql://${escidoc.database.host}:${escidoc.database.port}/${oaiprovider.database.name}</value>
    </modify>
    <modify>
        <name>proai.db.driverClassName</name>
        <value>org.postgresql.Driver</value>
    </modify>
    <modify>
        <name>proai.db.username</name>
        <value>${oaiprovider.database.user}</value>
    </modify>
    <modify>
        <name>proai.db.password</name>
        <value>${oaiprovider.database.password}</value>
    </modify>
</processor>
