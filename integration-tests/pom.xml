			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<version>1.0.1-SNAPSHOT</version>
				<executions>
					<execution>
						<id>install</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>install</goal>
						</goals>
					</execution>
					<execution>
						<id>start-container</id>
						<phase>generate-test-sources</phase>
						<goals>
							<goal>start</goal>
						</goals>
						<configuration>
							<wait>false</wait>
						</configuration>
					</execution>
					<execution>
						<id>stop-container</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>stop</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<container>
						<containerId>jboss42x</containerId>
						<zipUrlInstaller>
							<url>http://escidev5:8888/files/jboss-4.2.3.GA.escidoc-core.zip</url>
							<installDir>${installDir}</installDir>
						</zipUrlInstaller>
						<output>${project.build.directory}/jboss42x/container.log</output>
						<append>false</append>
						<log>${project.build.directory}/jboss42x/cargo.log</log>
					</container>

					<configuration>
						<type>standalone</type>
						<home>${project.build.directory}/jboss42x/container</home>
						<properties>
							<cargo.servlet.port>8080</cargo.servlet.port>
							<cargo.rmi.port>1099</cargo.rmi.port>
							<cargo.logging>high</cargo.logging>
						</properties>
						<deployables>
							<deployable>
								<groupId>org.escidoc</groupId>
								<artifactId>escidoc-core</artifactId>
								<type>ear</type>
								<pingURL>http://localhost:8080/adm/admin/get-repository-info</pingURL>
							</deployable>
						</deployables>
					</configuration>
				</configuration>
