                                        templateFile="${basedir}/src/main/resources/xdoclet/spring_xml_remote.xdt"
                                        havingclasstag="service" defaultLazyInit="true">
                                    </springxml>
                                </springdoclet>
                                <springdoclet destDir="${basedir}/target/generated-sources">
                                    <fileset dir="${basedir}/../sm/src/main/java" includes="**/*.java"
                                        excludes="" />
                                    <springxml destDir="${basedir}/target/classes/META-INF"
                                        destinationFile="applicationContext-sm-remote.xml"
                                        templateFile="${basedir}/src/main/resources/xdoclet/spring_xml_remote.xdt"
                                        havingclasstag="service" defaultLazyInit="true">
                                    </springxml>
                                </springdoclet>
                                <springdoclet destDir="${basedir}/target/generated-sources">
                                    <fileset dir="${basedir}/../st/src/main/java" includes="**/*.java"
                                        excludes="" />
                                    <springxml destDir="${basedir}/target/classes/META-INF"
                                        destinationFile="applicationContext-st-remote.xml"
                                        templateFile="${basedir}/src/main/resources/xdoclet/spring_xml_remote.xdt"
                                        havingclasstag="service" defaultLazyInit="true">
                                    </springxml>
                                </springdoclet>
                                <springdoclet destDir="${basedir}/target/generated-sources">
                                    <fileset dir="${basedir}/../tme/src/main/java" includes="**/*.java"
                                        excludes="" />
                                    <springxml destDir="${basedir}/target/classes/META-INF"
                                        destinationFile="applicationContext-tme-remote.xml"
                                        templateFile="${basedir}/src/main/resources/xdoclet/spring_xml_remote.xdt"
                                        havingclasstag="service" defaultLazyInit="true">
                                    </springxml>
                                </springdoclet>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
