		</plugins>
	</build>

    <pluginRepositories>
        <pluginRepository>
            <id>codehaus-plugins</id>
            <url>http://dist.codehaus.org/</url>
            <layout>legacy</layout>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </pluginRepository>
    </pluginRepositories>

	<dependencies>

	</dependencies>

</project>
