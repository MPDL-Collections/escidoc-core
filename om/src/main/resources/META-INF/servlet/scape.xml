<?xml version="1.0" encoding="UTF-8"?>
<mapping>
	<define>
		<var name="PATH_ID" regexp="/([^/?]*)" />
		<var name="MD_NAME" regexp="/([^/?]*)" />
	</define>
	<resource name="IntellectualEntity" base-uri="/scape/entity">
		<descriptor uri="/scape/entity/${PATH_ID}">
			<invoke http="GET" method="getIntellectualEntity" param1="${PATH_ID}" />
			<invoke http="PUT" method="updateIntellectualEntity" param1="${PATH_ID}"
				param2="${BODY}" />
		</descriptor>
		<descriptor uri="/scape/entity">
			<invoke http="POST" method="ingestIntellectualEntity" param1="${BODY}" />
		</descriptor>
		<descriptor uri="/scape/entity-async">
			<invoke http="POST" method="ingestIntellectualEntityAsync"
				param1="${BODY}" />
		</descriptor>
		<descriptor uri="/scape/entity-list">
			<invoke http="POST" method="getIntellectualEntitySet" param1="${BODY}" />
		</descriptor>
		<descriptor uri="/scape/entity-version-list/${PATH_ID}">
			<invoke http="GET" method="getIntellectualEntityVersionSet"
				param1="${PATH_ID}" />
		</descriptor>
	</resource>

	<resource name="IntellectualEntity" base-uri="/scape/sru/entities">
		<descriptor uri="/scape/sru/entities">
			<invoke http="GET" method="searchIntellectualEntities" param1="${PARAMETERS}" />
		</descriptor>
	</resource>

	<resource name="IntellectualEntity" base-uri="/scape/metadata">
		<descriptor uri="/scape/metadata/${PATH_ID}/${MD_NAME}">
			<invoke http="GET" method="getMetadata" param1="${PATH_ID}"
				param2="${MD_NAME}" />
			<invoke http="PUT" method="updateMetadata" param1="${PATH_ID}"
				param2="${MD_NAME}" param3="${BODY}" />
		</descriptor>
	</resource>

	<resource name="LifeCycle" base-uri="/scape/lifecycle">
		<descriptor uri="/scape/lifecycle/${PATH_ID}">
			<invoke http="GET" method="getLifecycleStatus" param1="${PATH_ID}" />
		</descriptor>
	</resource>

	<resource name="Representation" base-uri="/scape/representation">
		<descriptor uri="/scape/representation/${PATH_ID}">
			<invoke http="GET" method="getRepresentation" param1="${PATH_ID}" />
			<invoke http="PUT" method="updateRepresentation" param1="${PATH_ID}"
				param2="${BODY}" />
		</descriptor>
	</resource>

	<resource name="Representation" base-uri="/scape/sru/representations">
		<descriptor uri="/scape/sru/representations">
			<invoke http="GET" method="searchRepresentations" param1="${PARAMETERS}" />
		</descriptor>
	</resource>

	<resource name="File" base-uri="/scape/file">
		<descriptor uri="/scape/file/${PATH_ID}">
			<invoke http="GET" method="getFile" param1="${PATH_ID}" />
		</descriptor>
	</resource>

	<resource name="File" base-uri="/scape/sru/files">
		<descriptor uri="/scape/sru/files">
			<invoke http="GET" method="searchFiles" param1="${PARAMETERS}" />
		</descriptor>
	</resource>

	<resource name="BitStream" base-uri="/scape/bitstream">
		<descriptor uri="/scape/bitstream/${PATH_ID}">
			<invoke http="GET" method="getRepresentations" param1="${PATH_ID}" />
		</descriptor>
	</resource>

	<resource name="Metadata" base-uri="/scape/metadata">
		<descriptor uri="/scape/metadata/${PATH_ID}/${MD_NAME}">
			<invoke http="GET" method="getMetadata" param1="${PATH_ID}"
				param2="${MD_NAME}" />
		</descriptor>
	</resource>
</mapping>