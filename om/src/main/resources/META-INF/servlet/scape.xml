<?xml version="1.0" encoding="UTF-8"?>
<mapping>
	<define>
		<var name="PATH_ID" regexp="/([^/?]*)" />
	</define>
	<resource name="IntellectualEntity" base-uri="/scape/entity">
		<descriptor uri="/scape/entity/${PATH_ID}">
			<invoke http="GET" method="getIntellectualEntity" param1="${PATH_ID}" />
			<invoke http="PUT" method="updateIntellectualEntity" param1="${PATH_ID}"
				param2=${BODY} />
		</descriptor>
		<descriptor uri="/scape/entity">
			<invoke http="POST" method="ingestIntellectualEntity" param1="${BODY}" />
		</descriptor>
		<descriptor uri="/scape/entity-async">
			<invoke http="POST" method="ingestIntellectualEntityAsync"
				param1="${BODY}" />
		</descriptor>
		<descriptor uri="/scape/entity-list">
			<invoke http="POST" method="getIntellectualEntity" param1="${BODY}" />
		</descriptor>
		<descriptor uri="/scape/metadata/${PATH_ID}">
			<invoke http="GET" method="getMetadata" param1="${PATH_ID}" />
			<invoke http="PUT" method="updateMetadata" param1="${PATH_ID}"
				param2=${BODY} />
		</descriptor>
		<descriptor uri="/scape/entity-version-list/${PATH_ID}">
			<invoke http="GET" method="getIntellectualEntity" param1="${PATH_ID}" />
		</descriptor>
		<descriptor uri="/scape/lifecycle/${PATH_ID}">
			<invoke http="GET" method="getLifecycle" param1="${PATH_ID}" />
		</descriptor>
		<descriptor uri="/scape/sru/entities">
			<invoke http="GET" method="getLifecycle" />
		</descriptor>
	</resource>

	<resource name="Representation" base-uri="/scape/representation">
		<descriptor uri="/scape/representation/${PATH_ID}">
			<invoke http="GET" method="getRepresentation" param1="${PATH_ID}" />
			<invoke http="PUT" method="getRepresentation" param1="${BODY}" />
		<descriptor uri="/scape/sru/representations">
			<invoke http="GET" method="searchRepresentations" param1="${PARAMETERS}" />
		</descriptor>
		</descriptor>
	</resource>

	<resource name="File" base-uri="/scape/file">
		<descriptor uri="/scape/file/${PATH_ID}">
			<invoke http="GET" method="getFile" param1="${PARTH_ID}" />
		</descriptor>
		<descriptor uri="/scape/sru/file">
			<invoke http="GET" method="searchFile" param1="${PARAMETERS}" />
		</descriptor>
	</resource>

	<resource name="BitStream" base-uri="/scape/bitstream">
		<descriptor uri="/scape/bitstream/${PATH_ID}">
			<invoke http="GET" method="getRepresentation" param1="${PATH_ID}" />
		</descriptor>
	</resource>
</mapping>