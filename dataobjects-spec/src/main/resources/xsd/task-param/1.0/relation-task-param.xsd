<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:common="http://www.escidoc.org/schemas/common/1.0/common-types"
           xmlns:param="http://www.escidoc.org/schemas/task-param/1.0/relation-task-param"
           targetNamespace="http://www.escidoc.org/schemas/task-param/1.0/relation-task-param"
           elementFormDefault="qualified" attributeFormDefault="unqualified">

  <xs:import namespace="http://www.escidoc.org/schemas/common/1.0/common-types" schemaLocation="http://www.escidoc.org/schemas/common/1.0/common-types.xsd"/>

  <xs:element name="param" type="param:paramType"/>
  <xs:element name="relation" type="param:relationType"/>
  <xs:element name="targetId" type="xs:token"/>
  <xs:element name="predicate" type="xs:anyURI"/>

  <xs:complexType name="paramType">
    <xs:sequence>
      <xs:element ref="param:relation" minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attributeGroup ref="common:lmdRequired"/>
  </xs:complexType>

  <xs:complexType name="relationType">
    <xs:all>
      <xs:element ref="param:targetId" minOccurs="1"/>
      <xs:element ref="param:predicate" minOccurs="1"/>
    </xs:all>
  </xs:complexType>
</xs:schema>
