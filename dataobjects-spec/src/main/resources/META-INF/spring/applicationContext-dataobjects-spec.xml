<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-lazy-init="false">

  <bean name="escidocJAXBContextProvider" class="org.escidoc.core.util.xml.internal.JAXBContextProvider">
    <property name="packageFile">
      <value>org/escidoc/core/domain/jaxb.packages</value>
    </property>
  </bean>

  <bean name="ObjectFactoryProvider" class="org.escidoc.core.domain.ObjectFactoryProvider"/>

</beans>