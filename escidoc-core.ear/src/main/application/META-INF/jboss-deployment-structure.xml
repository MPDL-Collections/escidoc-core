<?xml version="1.0" encoding="UTF-8"?>
<jboss-deployment-structure xmlns="urn:jboss:deployment-structure:1.2" >
 
<ear-subdeployments-isolated>false</ear-subdeployments-isolated>
	
	<module name="deployment.myservices" >
	
 	 	<resources>
 	 		<resource-root path=".">
 	 			<filter>
 	 				<include path="services/**"/>
 	 			</filter>
 	 		
 	 		</resource-root>
 	 	</resources>
 	 </module>
	
	 <deployment>
		
	    <exclude-subsystems>
            <subsystem name="jpa"/>
            <subsystem name="webservices" />
        </exclude-subsystems>
         <exclusions>
          	<module name="javaee.api" />  
            <module name="org.hibernate" />
            <module name="org.apache.xalan" />
            <module name="org.apache.httpcomponents" />
        </exclusions>
	    <dependencies>
	    	<module name="escidoc" export="true" />
		    <module name="javax.jms.api"/>
		    <module name="org.jboss.jts"/>
			<module name="javax.management.j2ee.api"/>
			<module name="org.joda.time" export="true"/>
			<module name="org.codehaus.woodstox" services="import" export="true"/>
			<!-- see https://developer.jboss.org/message/637818#637818 -->
			<module name="javaee.api" >  
            <imports>  
                <exclude-set>  
                    <path name="org/apache/xml/security"/>  
                </exclude-set>  
            </imports>  
        </module>  
			
			<module name="deployment.myservices" services="import" export="true"/>
			
			<!-- 
			<module name="deployment.escidoc-core-1.3.10-SNAPSHOT.ear.13_escidoc-core.war" services="import"  />
			-->
	    </dependencies>
	    
	    
	    
	    
 	 </deployment>
 	 

	
 	
</jboss-deployment-structure>  