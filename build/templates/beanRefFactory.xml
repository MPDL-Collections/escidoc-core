<?xml version='1.0' encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
  <bean id="@componentName.spring.ejb.context"
      class="org.springframework.context.support.ClassPathXmlApplicationContext">
    <constructor-arg>
      <list>
        <value>/META-INF/applicationContext-remote.xml</value>
        <value>/META-INF/applicationContext-@componentName.xml</value>
      </list>
    </constructor-arg>
  </bean>
    
</beans>
